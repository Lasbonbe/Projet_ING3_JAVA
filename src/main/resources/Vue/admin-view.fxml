<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.AdminPageController"
            stylesheets="@css/adminpagestyle.css">

    <ImageView fx:id="backgroundImage" mouseTransparent="true"/>

    <top>
        <HBox spacing="10"
              alignment="TOP_RIGHT">
            <Button onAction="#previousClick" styleClass="button-invisible"> <graphic> <ImageView fx:id="previousButton"/> </graphic> </Button>
            <Button onAction="#nextClick" styleClass="button-invisible"> <graphic> <ImageView fx:id="nextButton"/> </graphic> </Button>
            <Button onAction="#logoutClick" styleClass="button-invisible"> <graphic> <ImageView fx:id="quitButton"/> </graphic> </Button>
        </HBox>
    </top>

    <center>
        <HBox spacing="20"
              alignment="BOTTOM_LEFT">
            <padding> <Insets bottom="20" left="100"/> </padding>
            <TableView fx:id="usersTable">
                <columns>
                    <TableColumn fx:id="colId"           text="ID"           prefWidth="50"/>
                    <TableColumn fx:id="colNom"          text="Nom"          prefWidth="120"/>
                    <TableColumn fx:id="colEmail"        text="Email"        prefWidth="180"/>
                    <TableColumn fx:id="colReservations" text="Réservations" prefWidth="100"/>
                </columns>
            </TableView>

            <!-- Terminal SSH intégré -->
            <TextArea fx:id="consoleOutput"
                      wrapText="true"
                      prefWidth="700" prefHeight="500">
            </TextArea>
        </HBox>
    </center>

</BorderPane>
